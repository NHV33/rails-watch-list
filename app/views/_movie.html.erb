<div class="card m-3" style="width: 18rem;">
  <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
  <div class="card-body">
    <h5 class="card-title"><%= "#{bookmark.movie.title}" %></h5>
    <h5 class="card-title text-end"><%= "#{bookmark.movie.rating} ⭐" %></h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= "📝 \"#{bookmark.comment}\"" %></li>
  </ul>
  <div class="card-body">
    <%= button_to 'Delete', bookmark_path(bookmark), method: :delete, class: "btn btn-primary" %>
    <%# <a href="#" class="card-link">Card link</a> %>
    <%# <a href="#" class="card-link">Another link</a> %>
  </div>
</div>
